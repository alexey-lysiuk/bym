import configuration
import repository


# Force particular macOS version for easy deployment

_macos_version = '10.7'
_sysroot_path = '/Volumes/Storage/Work/devbuilds/macos_sdk/MacOSX10.7.sdk'
_extra_flags = '-mmacosx-version-min=%s -isysroot %s' % (_macos_version, _sysroot_path)

_environment = configuration.environment

for name in configuration.environment_variables:
    if not name.endswith('FLAGS'):
        continue

    _environment[name] += _extra_flags

configuration.cmake_arguments += (
    '-DCMAKE_OSX_DEPLOYMENT_TARGET=' + _macos_version,
    '-DCMAKE_OSX_SYSROOT=' + _sysroot_path
)

# The last version of GLib that supports Mac OS X 10.7 Lion is 2.44.1
glib = repository.packages['glib']
glib['src'] = 'https://download.gnome.org/sources/glib/2.44/glib-2.44.1.tar.xz'
glib['chk'] = '8811deacaf8a503d0a9b701777ea079ca6a4277be10e3d730d2112735d5eca07'
